{
  "cSpell.enabled": false,
  "cSpell.language": "en,ru",
  "cSpellExt.enableDictionaries": ["russian"],
  "clangd.enabled": true,
  "clangd.semanticHighlighting": true,
  "clangd.path": "clangd",
  "clangd.arguments": [
    "-j=16",
    "--background-index",
    "--index",
    "--clang-tidy",
    "--clang-tidy-checks=clang-diagnostic-*,clang-analyzer-*,-*,bugprone*,modernize*,performance*,-modernize-pass-by-value,-modernize-use-trailing-return-type,-modernize-use-auto,-modernize-use-using",
    "--pch-storage=memory",
    "--cross-file-rename",
    "--completion-parse=auto",
    "--completion-style=detailed"
  ],
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.semanticTokensHighlights": true,
  "coc.preferences.useQuickfixForLocations": true,
  "codeLens.enable": true,
  "diagnostic.enableMessage": "never",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "Coc: ",
  "prettier.eslintIntegration": true,
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "rust-client.disableRustup": true,
  "scss.colorDecorators.enable": true,
  "scss.validate": true,
  "signature.triggerSignatureWait": 200,
  "suggest.triggerCompletionWait": 30,
  "suggest.defaultSortMethod": "alphabetical",
  "suggest.enablePreselect": true,
  "suggest.enablePreview": true,
  "suggest.floatEnable": true,
  "suggest.maxCompleteItemCount": 1000,
  "suggest.noselect": false,
  "suggest.numberSelect": false,
  "suggest.triggerAfterInsertEnter": true,
  "tsserver.formatOnType": true,
  "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
  "typescript.format.semicolons": "remove",
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["stack.yaml", "cabal.config", "package.yaml"],
      "filetypes": ["hs", "lhs", "haskell", "lhaskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    },
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": ["build/"],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    },
    "sql": {
      "command": "sql-language-server",
      "args": ["up", "--method", "stdio"],
      "filetypes": ["sql", "mysql"]
    }
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pug",
    "python",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "vim",
    "yaml",
    "yml"
  ],
  "git.enableGutters": false
}
